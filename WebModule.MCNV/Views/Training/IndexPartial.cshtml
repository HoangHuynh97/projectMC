   {
      col.FieldName = "Name";
      col.Caption = T("Họ và tên");
      col.Width = 200;
   });
   st.Columns.Add(col =>
   {
      col.FieldName = "Gender";
      col.Caption = T("Giới tính");
      col.Width = 100;
   });
