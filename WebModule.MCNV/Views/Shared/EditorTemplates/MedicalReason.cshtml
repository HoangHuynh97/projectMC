@model string
@{
   var caption = T(ViewData.ModelMetadata.DisplayName);
}

@Html.DevExpress().ComboBoxFor(m => m, st =>
{
   st.DefaultSettings();
   st.Properties.ValueField = "Name";
   st.Properties.ValueType = typeof(string);
   st.Properties.TextField = "Name";
   st.Properties.Caption = caption;
   st.Properties.DropDownStyle = DropDownStyle.DropDown;
   if (ViewData.ModelMetadata.IsRequired)
      st.Properties.CaptionSettings.RequiredMarkDisplayMode = EditorRequiredMarkMode.Required;
   st.Properties.DropDownButton.Image.IconID = IconID.FormatListbullets16x16;
}).BindList(MedicalReason.ComboboxData()).GetHtml()
